{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "traceResolution": false,
    "noLib": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules/", "dist/", "src/main/"],
  "include": ["src/agent/*.ts"],
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}
